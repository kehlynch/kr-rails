<div class="bid-buttons-container center-container <%= visible ? "" : "d-none" %>" id="js-valid-<%= type %>s">
  <% bids.each do |slug, name| %>
    <input
      hidden=true
      id="valid-<%= type %>-<%= slug %>"
      name="game[make_<%= type %>]"
      type="checkbox" 
      value="<%= slug %>"
    />
    <%= bid_button(slug, name, type) %>
  <% end %>
</div>
