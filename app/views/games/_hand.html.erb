<div class="row pl-4 pr-4 justify-content-center hand-container">
  <% @players.human_hand.each do |card| %>
    <div class="card-container hand">
      <input hidden=true id="<%= @stage.action %>_<%= card.slug %>" name="game[<%= @stage.action %>][]" type="checkbox" value="<%= card.slug %>" />
      <%= hand_card_button(card, @game) %>
    </div>
  <% end %>
  <% if human_resolve_talon?(@game) %>
    <div>
      <%= form.submit 'put down cards', disabled: true, id: 'talon-submit' %>
    </div>
  <% end %>
</div>
