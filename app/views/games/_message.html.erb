<div class="message card">
  <div class="card-header">
    <div id="js-message-header">
      <% if @action == 'make_bid' %>
        Bidding
      <% end %>
      <%= @bids.winning_bid_name %>
    </div>
    <div class="card-container king-indicator" id="js-king">
      <% if @game.king %>
        <%= card_tag(@game.king) %>
      <% end %>
    </div>
  </div>
  <div class="card-body" id="js-message-box">
    <% message.each do |m| %>
      <p class="card-text">
        <%= m %>
      </p>
    <% end %>
  </div>
</div>

