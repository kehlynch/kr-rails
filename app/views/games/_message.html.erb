<div class="message card">
  <div class="card-header">
    <div id="js-message-header">
      <%= heading %>
    </div>
    <div class="card-container king-indicator" id="js-king">
      <%= card_tag(king) if king %>
    </div>
  </div>
  <div class="card-body" id="js-message-box">
    <% message.each do |m| %>
      <p class="card-text">
        <%= m %>
      </p>
    <% end %>
  </div>
</div>

