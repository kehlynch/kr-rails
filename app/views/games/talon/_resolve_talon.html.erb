<div class="d-contents <%= 'd-none' unless visible %>" id="<%= stage %>">
  <div class="center-container <%= 'd-none' unless resolvable %> d-flex flex-column align-items-center" id="js-resolve-talon-button">
    <div class="picked-putdowns" id="js-picked-putdowns"></div>
    <div class="<%= 'd-none' unless resolvable %> " id="js-resolve-talon-button">
      <%=
        button_tag(
          button_text,
          onclick: "submitGame()",
          disabled: true,
          id: 'talon-submit',
          class: "btn btn-outline-dark put-down-cards-button"
        )
      %>
    </div>
  </div>

  <%= render 'hand/hand', hand %>

  <%= render 'instruction', instruction %>
</div>
