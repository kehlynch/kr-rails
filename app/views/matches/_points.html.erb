<div class="points-container center-container" id="js-points-container">
  <table class="table">
    <thead>
      <tr>
        <% @players.each do |p| %>
          <th scope="col"><%= p.name %></th>
        <% end %>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% match_points(@match_games, @player).each_with_index do |points, i| %>
        <% if @match_games[i].finished? %>
          <tr>
            <% points.each_with_index do |player_points, player_i| %>
              <td class="<%= points_classes(@players[player_i], @match_games[i]) %>" >
                <div>
                  <%= player_points %>
                </div>
              </td>
            <% end %>
            <td class="game-shorthands">
              <div class="bid-shorthand <%= bid_classes(@match_games[i]) %>"><%= bid_shorthand(@match_games[i]) %></div>
              <div class="announcement-shorthands">
                <%= announcement_shorthands(@match_games[i]) %>
              </div>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
