<div class="container">
  <h1>Games</h1>
  <div class="row">
    <div class="col">
      <%= link_to "New Game", new_match_path, class: "btn btn-outline-dark" %>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Started</th>
        <th scope="col">Stage</th>
        <th scope="col">Players</th>
        <th scope="col">Join</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @matches.each do |match| %>
        <%= render 'match', match: match %>
      <% end %>
    </tbody>
  </table>
</div>
