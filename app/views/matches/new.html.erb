<div class="container">
  <h1>Create Players</h1>
  <%= bootstrap_form_for(@match) do |f| %>
    <%= f.text_field :human_name, label: "Name", class: "form-control", placeholder: "name" %>
    <%= f.select :human_count, @human_count_select, label: "Game setup" %>
    <%= f.submit "create game", class: "btn btn-primary" %>
  <% end %>
</div>
